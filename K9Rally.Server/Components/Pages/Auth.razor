@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<MudText Typo="Typo.h3" 
         GutterBottom="true"
         id="auth-authenticated">You are authenticated!
</MudText>

<AuthorizeView>
    <MudText Class="mb-4"
        id="auth-username">Hello @context.User.Identity?.Name!</MudText>
</AuthorizeView>